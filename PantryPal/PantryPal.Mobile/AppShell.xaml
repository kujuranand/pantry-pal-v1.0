<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PantryPal.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PantryPal.Mobile.Views">

    <TabBar>
        <ShellContent 
            Title="Lists"
            ContentTemplate="{DataTemplate views:ListsPage}" />

        <ShellContent 
            Title="Categories"
            ContentTemplate="{DataTemplate views:CategoriesPage}" />

        <ShellContent 
            Title="Units"
            ContentTemplate="{DataTemplate views:UnitsPage}" />    

        <ShellContent 
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}" />

    </TabBar>

</Shell>
